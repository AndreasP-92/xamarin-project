
@model XamarinProjectBackend.Models.CoordInfo


@{
    ViewData["Title"] = "update";
}

<h1>update</h1>

<form method="POST" asp-action="updateCoordInfo">
    <input asp-for="Id" hidden></input>

    <p>@Model.Id</p>
    <p>@Model.Name</p>
    <p>@Model.Description</p>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Description" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Type"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Type" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Lat"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Lon"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Lat" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Lon" class="form-control" />
                    </div>
                </div>

                <div class="col-md-12 row text-center">
                    <div class="col-6">
                        <input type="submit" class="btn btn-success w-75" value="Opdater" />
                    </div>
                    <div class="col-6">
                        <a class="btn btn-primary w-75" asp-action="Index">Tilbage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
