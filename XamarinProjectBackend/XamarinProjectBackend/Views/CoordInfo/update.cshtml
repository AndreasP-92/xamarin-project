
@model XamarinProjectBackend.Models.CoordInfo


@{
    ViewData["Title"] = "update";
}

<h1>update</h1>

<form method="POST" asp-action="updateCoordInfo">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="description"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="name" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="description" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="type"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="type" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="lat"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="lon"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="lat" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="lon" class="form-control" />
                    </div>
                </div>

                <div class="col-md-12 row text-center">
                    <div class="col-6">
                        <input type="submit" class="btn btn-success w-75" value="Opdater" />
                    </div>
                    <div class="col-6">
                        <a class="btn btn-primary w-75" asp-action="Index">Tilbage</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
