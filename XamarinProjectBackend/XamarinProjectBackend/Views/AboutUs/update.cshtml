@model XamarinProjectBackend.Models.AboutUs

@{
    ViewData["Title"] = "update";
}

<form method="POST" asp-action="updateAboutUsDesc">
    <input asp-for="id" hidden></input>
    <div class="border p-3">
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="aboutUsText"></label>
                    </div>
                </div>
                <div class="form-group row">

                    <div class="col-4">
                        <input asp-for="aboutUsText" class="form-control" />
                    </div>
                </div>
                <div class="col-md-12 row text-center">
                    <div class="col-6">
                        <input type="submit" class="btn btn-success w-75" value="Opdater" />
                    </div>
                    <div class="col-6">
                        <a class="btn btn-primary w-75" asp-action="Index">Tilbage</a>
                    </div>
